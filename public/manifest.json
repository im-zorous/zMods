{
    "manifest_version": 3,
    "name": "zMods",
    "version": "1.0.0",
    "description": "zorous's Mods (zMods)",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*", "https://www.helmet-heroes.com/*"],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "16": "logo-16.png",
        "32": "logo-32.png",
        "48": "logo-48.png",
        "128": "logo-128.png"
    }
}